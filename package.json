{
  "name": "ucr-lc3",
  "displayName": "UCR-LC3",
  "description": "UCR's LC-3 Syntax Highlighter and Debugger",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ucr-lc3.rehighlight"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ucr-lc3.rehighlight",
        "title": "Rehighlight"
      }
    ],
    "languages":[
      {
        "id": "LC3",
        "aliases": [
          "LC-3",
          "LC3"
        ],
        "extensions": [
          ".asm",
          ".lc3"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars" : [
      {
        "language": "LC3",
        "scopeName": "source.asm",
        "path": "./syntaxes/lc3.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}

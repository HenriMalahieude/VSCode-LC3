{
  "name": "ucr-lc3",
  "displayName": "UCR-LC3",
  "description": "UCR's LC-3 Syntax Highlighter and Debugger",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "LC3",
        "aliases": [
          "LC-3",
          "LC3"
        ],
        "extensions": [
          ".asm",
          ".lc3"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "LC3",
        "scopeName": "source.asm",
        "path": "./syntaxes/lc3.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lc3tools",
          "title": "LC3 Tools",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "lc3tools": [
        {
          "id": "lc3-tools-view",
          "name": "Menu",
          "icon": "media/assemble.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lc3-tools-view",
        "contents": "[Assemble Code](command:ucr-lc3.AssembleCode)\n[Open Simulator](command:ucr-lc3.OpenSimulator)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.18.11",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "require-from-string": "^2.0.2"
  }
}
